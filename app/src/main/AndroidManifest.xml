<?xml version="1.0" encoding="utf-8"?>
<manifest package="ui.github.com"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.ItemTypeDivideActivity"/>
        <activity android:name=".ui.FloatHeaderActivity"/>
        <activity android:name=".ui.FloatHeader2Activity"/>
        <activity android:name=".ui.LoadMoreActivity"/>

        <!-- 加载更多 -->
        <activity android:name=".ui.loadmore.LoadMoreTest1Activity"/>
        <activity android:name=".ui.loadmore.LoadMoreTest2Activity"/>
        <activity android:name=".ui.loadmore.LoadMoreTest3Activity"/>
        <activity android:name=".ui.loadmore.LoadMoreTest4Activity"/>

        <!-- 下拉刷新 -->
        <activity android:name=".ui.SwipeRefreshActivity"/>
        <activity android:name=".ui.refresh.RefreshActivity1"/>
        <!-- 自定义ViewGroup -->
        <activity android:name=".ui.refresh.RefreshActivity2"/>
    </application>

</manifest>